---
import logo from "../public/calvin.png";
import MenuButton from "./MenuButton";
import LightSwitch from "./LightSwitch";
import ResumeButton from "./ResumeButton";

const { underline } = Astro.props;
---

<div class="flex flex-row items-center pb-5">
  <a href="/" class="mr-5">
    <img src={logo} alt="Logo" class="h-8" />
  </a>

  <div class="hidden gap-5 md:inline-flex">
    <a
      href="/about"
      class={underline === "about" ? "underline underline-offset-4" : ""}
      >About</a
    >
    <a
      href="/projects"
      class={underline === "projects" ? "underline underline-offset-4" : ""}
      >Projects</a
    >
    <a
      href="/blog"
      class={underline === "blog" ? "underline underline-offset-4" : ""}>Blog</a
    >
  </div>

  <div class="grow"></div>

  <LightSwitch client:load />

  <div class="inline-flex md:hidden">
    <MenuButton client:load />
  </div>

  <div class="hidden md:inline-flex">
    <ResumeButton />
  </div>
</div>
