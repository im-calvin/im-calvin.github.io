  <div class="m-auto max-w-prose p-5">
    <Navbar />
    <h1 class="text-3xl text-moona-yellow">Blog</h1>
    {
      posts.map((post) => (
        <div class="my-5">
          <BlogPreview
            url={`/blog/${post.slug}`}
            title={post.data.title}
            snippet={post.data.snippet}
          />
        </div>
      ))
    }
  </div>
</Layout>
